<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ViewItems.AddItem.AddItem">
    <children>
        <TextField fx:id="itemNameField" prefHeight="30.0" prefWidth="300.0" promptText="Item name">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="itemPriceField" prefHeight="30.0" prefWidth="300.0" promptText="Item price">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
      <TextField fx:id="itemCategoryField" layoutX="50.0" layoutY="81.0" prefHeight="30.0" prefWidth="300.0" promptText="Item Category">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
        <Button fx:id="itemSubmitBtn" mnemonicParsing="false" text="Add Item">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>
</VBox>
